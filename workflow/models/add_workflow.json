{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "project_id": {
            "type": "string"
        },
        "workflow_name": {
            "type": "string"
        },
        "created_by_id": {
            "type": "string"
        },
        "stages": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": {
                    "type": "object",
                    "properties": {
                        "tasks": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "checklists": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "required": [
                        "tasks",
                        "checklists"
                    ]
                }
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "project_id",
        "workflow_name",
        "created_by_id",
        "stages"
    ]
}