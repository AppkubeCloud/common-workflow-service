{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "index": {
        "type": "integer"
      },
      "stage": {
        "type": "object",
        "properties": {
          "stage_name": {
            "type": "object",
            "properties": {
              "tasks": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "checklists": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": ["tasks", "checklists"]
          }
        },
        "required": ["stage_name"]
      }
    },
    "required": ["index", "stage"],
    "additionalProperties": false
}
